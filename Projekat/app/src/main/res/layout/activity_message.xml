<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="marko.milosavljevic.chatapplication.MessageActivity">


        <Button
            android:id="@+id/messageActvLogOutBtnID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:text="@string/logOut" />


    <EditText
        android:id="@+id/massageTextID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:ems="12"
        android:hint="@string/messageText" />

    <Button
        android:id="@+id/sendBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/massageTextID"
        android:layout_alignStart="@+id/messageActvLogOutBtnID"
        android:enabled="false"
        android:text="@string/Send" />

    <ListView
        android:id="@+id/messageListID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sendBtnID"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/messageActvLogOutBtnID" />

    <TextView
        android:id="@+id/contactNameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messageListID"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/sendBtnID" />


</RelativeLayout>
